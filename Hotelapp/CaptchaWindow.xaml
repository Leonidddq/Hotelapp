<Window x:Class="Hotel1.CaptchaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Капча" Height="300" Width="400">
    <Grid>
        <Image x:Name="CaptchaImage" HorizontalAlignment="Center" VerticalAlignment="Top" Height="100" Width="300" Margin="0,10,0,0"/>
        <TextBox x:Name="CaptchaInput" HorizontalAlignment="Center" VerticalAlignment="Top" Width="200" Height="30" Margin="0,130,0,0"/>
        <Button Content="Проверить" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="40" Margin="0,180,0,0" Click="CheckButton_Click"/>
    </Grid>
</Window>