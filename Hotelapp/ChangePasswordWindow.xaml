<Window x:Class="Hotel1.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Смена пароля" Height="300" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <Label Content="Текущий пароль"/>
            <PasswordBox x:Name="CurrentPasswordBox"/>

            <Label Content="Новый пароль"/>
            <PasswordBox x:Name="NewPasswordBox"/>

            <Label Content="Подтверждение нового пароля"/>
            <PasswordBox x:Name="ConfirmPasswordBox"/>

            <Button Content="Изменить пароль" Margin="0,20,0,0" Click="ChangePassword_Click"/>
        </StackPanel>
    </Grid>
</Window>