<Window x:Class="Hotel1.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Просмотр номеров" Height="400" Width="700">
    <Grid Margin="10">

        <Button Content="Забронировать" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,58,0,0" Click="BookRoom_Click"/>
        <DataGrid x:Name="RoomDataGrid" AutoGenerateColumns="False" IsReadOnly="True" Height="250" Width="700" RenderTransformOrigin="0.496,0.802" Margin="-10,114,-10,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id_room}" Width="*"/>
                <DataGridTextColumn Header="Номер" Binding="{Binding room_number}" Width="*"/>
                <DataGridTextColumn Header="Этаж" Binding="{Binding floor}" Width="*"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding type_id}" Width="*"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>